{
  "name": "vite-plugins",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tomxuetao/vite-plugins.git"
  },
  "scripts": {
    "changeset": "changeset",
    "prepare": "husky",
    "commit": "git add . && git-cz",
    "version": "changeset version",
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --dir packages/build-cesium dev",
    "dev:example": "pnpm --dir packages/example dev",
    "build": "pnpm --dir packages/build-cesium build",
    "serve:example": "pnpm --dir packages/example serve",
    "build:example": "pnpm --dir packages/example build",
    "lint": "eslint ./packages/**/src --ext .js,.ts,.tsx,.mjs,.cjs --fix"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/serve-static": "^1.15.7",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "git-cz": "^4.9.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "tsup": "^8.3.6",
    "nano-staged": "^0.8.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "engines": {
    "pnpm": ">= 9.0.0"
  },
  "nano-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{ts,tsx,js,vue,scss}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
